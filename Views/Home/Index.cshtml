@{
    ViewData["Title"] = "Pet Homepage";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            background: url('/path/to/your/background-image.jpg') no-repeat center center fixed;
            background-size: cover;
            color: #333;
        }

        .header {
            text-align: center;
            padding: 100px 20px;
            background: rgba(0, 0, 0, 0.5);
            color: white;
            border-bottom: 5px solid #ff9800;
        }

            .header h1 {
                font-size: 4em;
                margin-bottom: 20px;
            }

            .header p {
                font-size: 1.5em;
            }

        .container {
            background: rgba(255, 255, 255, 0.9);
            padding: 40px;
            border-radius: 10px;
            margin-top: -50px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

        .content-section {
            text-align: center;
            margin-bottom: 30px;
        }

            .content-section h2 {
                font-size: 2em;
                margin-bottom: 15px;
                color: #ff9800;
            }

            .content-section p {
                font-size: 1.2em;
            }

        .footer {
            text-align: center;
            padding: 20px;
            background: #333;
            color: white;
            margin-top: 30px;
        }

        .btn-primary {
            background-color: #ff9800;
            border: none;
        }

            .btn-primary:hover {
                background-color: #e68900;
            }
    </style>
</head>
<body>
    <header class="header">
        <h1>Welcome to the Pet Informational Tracker</h1>
        <p>Your one-stop destination for all pet-related information</p>
    </header>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-4 content-section">
                <h2>About Us</h2>
                <p>Learn more about our mission to provide the best pet care information.</p>
                <a href="/Home/About" class="btn btn-primary">Learn More</a>
            </div>
            <div class="col-md-4 content-section">
                <h2>Our Services</h2>
                <p>Discover the services we offer to help you take care of your pets.</p>
                <a href="/Home/Services" class="btn btn-primary">Our Services</a>
            </div>
            <div class="col-md-4 content-section">
                <h2>Contact Us</h2>
                <p>Get in touch with us for any queries or support.</p>
                <a href="/Home/Contact" class="btn btn-primary">Contact Us</a>
            </div>
        </div>
    </div>
    <footer class="footer mt-5">
        <p>&copy; 2024 Pet Informational Tracker. All rights reserved.</p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

