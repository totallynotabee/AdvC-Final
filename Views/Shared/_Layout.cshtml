@using Microsoft.AspNetCore.Identity
@using AdvC_Final.Areas.Identity.Data
@inject SignInManager<AccountLoginUser> SignInManager
@inject UserManager<AccountLoginUser> UserManager

<!DOCTYPE html>

<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>@ViewData["Title"]</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
	<link href="https://fonts.googleapis.com/css2?family=Kdam+Thmor+Pro&display=swap" rel="stylesheet">
</head>
<body class="bg-light">
	<header>
		<nav class="navbar navbar-expand bg-info">
			<div class="container">
				<ul class="navbar-nav">
					<li class="nav-item"><a class="btn btn-light text-dark me-3" role="button" asp-area="default" asp-controller="Home" asp-action="Index">Home</a></li>
					@if (SignInManager.IsSignedIn(User))
					{
						@if (User.IsInRole("Admin") || User.IsInRole("PetManager"))
						{
							<li class="nav-item">
								<a class="btn btn-light text-dark me-3" role="button" asp-controller="Home" asp-action="AddPet">Add Pet</a>
							</li>
						}
					}
				</ul>
				@if (SignInManager.IsSignedIn(User))
				{
					<a class="btn btn-light text-dark me-1 float-end" role="button" asp-area="Account" asp-controller="Home" asp-action="Index">Account</a>
				}
				else
				{
					<div class="me-1 float-end">
						<a class="btn btn-light text-dark" role="button" asp-area="Account" asp-controller="Home" asp-action="Index">Log-In / Create Account</a>
					</div>
				}
			</div>
		</nav>
	</header>
	<div>
		@RenderBody()
	</div>
</body>
</html>
