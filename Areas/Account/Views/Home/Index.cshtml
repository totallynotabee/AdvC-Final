@using Microsoft.AspNetCore.Identity
@using AdvC_Final.Areas.Identity.Data
@inject SignInManager<AccountLoginUser> SignInManager
@inject UserManager<AccountLoginUser> UserManager
@{
	ViewData["Title"] = "Account";
}

<!DOCTYPE html>
<html>
<body>
	<div class="container col">
		<partial name="_Loginpartial" />
	</div>
	@if (SignInManager.IsSignedIn(User))
	{
		<div class="container">
			<p class="mt-3">Hello @UserManager.GetUserName(User)!</p>
			<div class="me-1">
				<a class="btn btn-light text-dark" role="button" asp-area="Account" asp-controller="Home" asp-action="Pets">Pets</a>
				<a class="btn btn-light text-dark" role="button" asp-area="Account" asp-controller="Home" asp-action="AddPet">Add Pet</a>
				<form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
					<button id="logout" type="submit" class="btn btn-light text-dark">Logout</button>
				</form>
			</div>
		</div>
	}
</body>
</html>